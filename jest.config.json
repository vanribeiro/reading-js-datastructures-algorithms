{
    "bail": 1,
    "verbose": true,
    "modulePathIgnorePatterns": [
        "<rootDir>/src/data-structures/set/ecma-2025-plus",
        "<rootDir>/src/interfaces",
        "<rootDir>/src/types",
        "<rootDir>/node_modules"
    ],
    "coverageDirectory" : "coverage",
    "collectCoverageFrom": [
        "<rootDir>/src/**/*.{ts,js}",
        "!<rootDir>/src/**/*.d.{ts}",
        "!<rootDir>/src/**/print.results.{ts,js}",
        "!<rootDir>/src/utils/colors.{ts,js}",
        "!<rootDir>/src/utils/index.{ts,js}"
    ]
}