{
    "compilerOptions": {
        "allowJs": true,
        "isolatedModules": true,
        "module": "Preserve",
        "moduleDetection": "force",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "sourceMap": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*test.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}